<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEntrainementActivity"
    android:orientation="vertical"

    android:background="@color/orangeClaire">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter un Entrainement"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Libellé de l'entraienement "/>

        <EditText
            android:id="@+id/editLibelle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/customerborderinput" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Description de l'entrainement"/>

        <EditText
            android:id="@+id/editDescription"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/customerborderinput"
           />
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/black" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

        <TextView
            android:id="@+id/txtNbSeance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Nombre de séance" />

        <EditText
            android:id="@+id/editNbSeance"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:background="@drawable/customerborderinput"
            android:inputType="number" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/txtReposCycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:text="Temps de repos par Séance(en seconde)" />

        <EditText
            android:id="@+id/editTpReposSeance"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtReposCycle"
            android:layout_centerHorizontal="true"
            android:background="@drawable/customerborderinput"
            android:inputType="number" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtNbCycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Nombre de Cycle" />

        <EditText
            android:id="@+id/editNbCycle"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:background="@drawable/customerborderinput"
            android:inputType="number" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/txtTpTravail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:text="Temps de Travail par Cycle(en seconde)" />

        <EditText
            android:id="@+id/editTpTravail"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTpTravail"
            android:layout_centerHorizontal="true"
            android:background="@drawable/customerborderinput"
            android:inputType="number" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/txtTpReposCycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:text="Temps de Repos par Cycle(en seconde)" />

        <EditText
            android:id="@+id/editTpReposCycle"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTpReposCycle"
            android:layout_centerHorizontal="true"
            android:background="@drawable/customerborderinput"
            android:inputType="number" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnAjouterEntrainement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:layout_gravity="center"
        android:width="200dp"
        android:layout_marginTop="20dp"/>

</LinearLayout>
